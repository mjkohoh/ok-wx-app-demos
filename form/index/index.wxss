.section {
  width: 100%;
  height: 100px;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  padding: 0 28px;
  box-sizing: border-box;
}

.section .title{
  font-size: 40rpx;
}

.section button {
  width: 100% !important;
}

.section radio:last-child {
  margin-left: 28px;
}

.section checkbox:last-child {
  margin-left: 28px;
}